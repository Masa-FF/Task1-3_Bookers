<h1>User info</h1>  

<h1>*画像を埋め込む</h1>

<table class="table table-basic">
  <tr>
    <th>name</th>
    <th><%= current_user.name %></th>
  </tr>       
  <tr>
    <th>introduction</th>
    <th>*後で書く</th>          
  </tr>
</table>

<% if @user == current_user %>
<%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-success btn-block' %>
<% else %>
<%= link_to 'MyPage', user_path(current_user), class: 'btn btn-success btn-block' %>
<% end %>

<h1>New book</h1>
<%= form_with model:@blog, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title, class: 'form-control' %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion, class: 'form-control', rows:5 %>
  <br><%= f.submit 'Create Book', class: 'btn btn-primary btn-block'  %>
<% end %>