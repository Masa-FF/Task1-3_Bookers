<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
    <h2>New Book</h2>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <br> <%= f.submit 'Update Book' %>
<% end %>

<%= link_to 'Show', book_path(@book.id) %>  |  <%= link_to :Back , books_path %>